@model ImageUploadingFirebase.Models.Image
@{
    ViewData["Title"] = "Add";
}

<h1>Image Uploading</h1>
<form method="post" enctype="multipart/form-data" asp-controller="Image" asp-action="Index">
    <input type="file" name="file" class="btn btn-outline-secondary" />
    <input type="submit" value="Upload Image" class="btn btn-primary" />
    <div>
        <a asp-action="Index">See the Images</a>
    </div>
</form>
