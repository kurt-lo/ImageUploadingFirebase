@model ImageUploadingFirebase.Models.Image

@{
    ViewData["Title"] = "Index";
}


<table class="table">
    <tr>
        <th>Image File Name</th>
        <th>Image</th>
    </tr>
    @foreach (var item in Model.FileImage)
    {
        <tr>
            <td>@item.Name</td>
            <td><img src="./NewFolder/@item.Name" width="100" height="100" /></td>
        </tr>
    }
</table>

<div>
    <a asp-action="Add" class="btn btn-primary">Upload New Image</a>
</div>